<!--pages/message/detail/detail.wxml-->
<view class='page'>
  <view style="display:none">
    <image mode='widthFix' wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.img}}" bindload="onImageLoad"></image>
  </view>
  <scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
    <view style="width:100%">
      <view class="img_item">
        <view wx:for="{{col1}}" wx:key="id">
          <image src="{{item.img}}" mode='widthFix' style="width:100%;height:{{item.height}}px"></image>
        </view>
      </view>
      <view class="img_item">
        <view wx:for="{{col2}}" wx:key="id">
          <image src="{{item.img}}" mode='widthFix' style="width:100%;height:{{item.height}}px"></image>
        </view>
      </view>
    </view>
  </scroll-view>
</view>