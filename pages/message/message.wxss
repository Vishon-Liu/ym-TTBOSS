/* pages/message/message.wxss */
page{
  background: #f5f5f5;
}
.chat{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  padding: .4rem .8rem;
}
.chat image{
  width: 3rem;
  height: 3rem;
  border-radius: .3rem;
}
.chat .chat_info{
  width: 80%;
  height: 3.4rem;
  font-size: .75rem;
  color: #575757;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}
.chat_info .name{
  line-height: 1.5rem;
  display: flex;
  justify-content: space-between;
}