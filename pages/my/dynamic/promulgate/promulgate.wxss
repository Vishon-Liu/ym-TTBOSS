/* pages/my/dynamic/promulgate/promulgate.wxss */
.page{
  padding: 0 1.5rem;
  box-sizing: border-box;
}
.promulgate{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 .5rem;
  box-sizing: border-box;
  margin-bottom: 2rem;
  font-size: 1rem;
}
.content{
  min-height:3rem;
  max-height: 8rem;
  width: 100%;
  font-size: 1rem;
  margin-bottom: 1rem;
}
.photo_wall{
  display: flex;
  flex-flow: row wrap;
  justify-content: start;
  align-items: center;
}
.photo_wall image{
  width: 30%;
  height: 6rem;
  margin-right: 3%;
  margin-bottom: .5rem;
  /* background: palevioletred; */
}
.icon-tianjia{
  font-size: 2rem;
  background: #f0f0f0;
  width: 30%;
  height: 6rem;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:.5rem;
}