/* pages/my/dynamic/promulgate/promulgate.wxss */
.page{
  padding: 0 1.5rem;
  box-sizing: border-box;
}
.promulgate{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 .5rem;
  box-sizing: border-box;
  margin-bottom: 2rem;
  font-size: 1rem;
}
.btn{
  display: flex;
  margin:0;
  font-size:.8rem;
  color:rgb(75, 205, 63);
}
.content{
  min-height:3rem;
  max-height: 8rem;
  width: 100%;
  font-size: 1rem;
  margin-bottom: 1rem;
}
.photo_wall{
  display: flex;
  flex-flow: row wrap;
  justify-content: start;
  align-items: center;
}
.photo{
  position: relative;
  width: 30%;
  height: 6rem;
  margin-right: 3%;
  margin-bottom: .5rem;
}
.photo image{
  width: 100%;
  height: 6rem;
}
.close{
  display: inline-flex;
  position: absolute;
  top: -8%;
  right: -8%;
  z-index:9;
  background:#F23A3A;
  border-radius:50%;
  color:#fff;
  padding: .2rem;
  box-sizing: border-box;
}
.photo icon{
  position: absolute;
  top: 1%;
  right: 1%;
}
.icon-tianjia{
  font-size: 2rem;
  background: #f0f0f0;
  width: 30%;
  height: 6rem;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:.5rem;
}