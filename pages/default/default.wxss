/* pages/default/default.wxss */
.scan{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}
.scan image{
  width: 8rem;
  margin-bottom: 1rem;
}
.scan button{
  width: 8rem;
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 5rem;
}
.notfound{
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.notfound view{
  display: flex;
  align-items: center;
  flex-flow: column nowrap;
}
.notfound image{
  width: 8rem;
  height: 8rem;
  margin-bottom: 2rem;
}
.notfound text{
  font-size: .8rem;
  color: #BCBEBD;
}