}
.murky{
  position:fixed;
  bottom: 0;
  left: 0;
  width:100%;
  height:100%;
  text-align:center;
  background:rgba(0,0,0,0.8);
  filter:Alpha(opacity=60);
  z-index:9;
}
.line1{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  color: #575757;
  background: #f4f4f4;
  font-size: .8rem;
  padding: .5rem;
  box-sizing: border-box;
  box-shadow:0px 0px 10px 2px #DCDCDD;
  margin-bottom: .5rem;
}
.line1 .icon-rili{
  display: flex;
  align-items: center;
}
.info{
  font-size: .8rem;
  color: #575757;
  padding: .5rem 1rem;
}
.line2{
  font-size: .8rem;
  color: #575757;
  text-align: center;
}
.time{
  font-weight: 600;
  color:black;
  margin-bottom: .5rem;
}
.behavior{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 .5rem;
  box-sizing: border-box;
  width: 100%;
  height: 4rem;
  box-shadow:0px 0px  10px 3px #DCDCDD;
}
.behavior image{
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  margin-right: .5rem;
}
.behavior view{
  width: 80%;
}
.calendarModel{
  position: fixed;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  padding:.5rem 1rem 0 1rem;
  box-sizing: border-box;
  z-index: 99;
  background: white;
}
.calendar{
  position: absolute;
  top: 3rem;
  left: 5%;
  width: 90%;
  background: white;
}